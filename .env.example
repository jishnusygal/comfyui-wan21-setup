# .env file for ComfyUI Remote Access
# Copy this to .env and fill in your values

# ==============================================
# Basic Authentication
# ==============================================
COMFYUI_USERNAME=admin
COMFYUI_PASSWORD=your_secure_password_here

# ==============================================
# Domain Configuration
# ==============================================
DOMAIN=comfyui.yourdomain.com
LETSENCRYPT_EMAIL=your.email@domain.com

# ==============================================
# Tailscale Configuration
# ==============================================
# Get this from: https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=tskey-auth-your-key-here

# ==============================================
# Cloudflare Tunnel Configuration
# ==============================================
# Get this from Cloudflare Zero Trust dashboard
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token

# ==============================================
# ngrok Configuration
# ==============================================
# Get this from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your-ngrok-auth-token

# ==============================================
# Advanced Settings
# ==============================================
COMFYUI_HOST=0.0.0.0
COMFYUI_PORT=8188

# GPU Settings (optional overrides)
# FORCE_CPU=false
# FORCE_LOWVRAM=false